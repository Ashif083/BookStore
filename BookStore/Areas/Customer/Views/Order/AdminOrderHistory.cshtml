@model List<Order>

<h2><i class="fa-brands fa-sellsy"></i>&nbsp;Selling History</h2>

<table class="table">
    <thead>
        <tr>
            <th>Order Number</th>
            <th>Customer Name</th>
            <th>Price</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var order in Model)
        {
            <tr>
                <td>@order.OrderNo</td>
                <td>@order.Name</td>
                <td>@order.OrderDetails.Sum(od => od.Books.Price).ToString("c")</td>
                <td><a asp-controller="Order" asp-action="OrderDetails" asp-route-id="@order.Id" class="btn btn-info">View Details</a></td>
            </tr>
        }
        <tr>
            <td></td>
            <td><strong>Grand Total</strong></td>
            <td><strong>@Model.Sum(order => order.OrderDetails.Sum(od => od.Books.Price)).ToString("c")</strong></td>
        </tr>
    </tbody>
</table>


