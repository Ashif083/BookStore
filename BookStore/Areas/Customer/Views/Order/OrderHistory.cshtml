@model List<Order>

<h2>Order History</h2>

<table class="table">
    <thead>
        <tr>
            <th>Order Number</th>
            <th>Total Price</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var order in Model)
        {
            <tr>
                <td>@order.OrderNo</td>
                <td>@order.OrderDetails.Sum(od => od.Books.Price).ToString("c")</td>
                <td><a asp-controller="Order" asp-action="OrderDetails" asp-route-id="@order.Id" class="btn btn-info">View Details</a>
               @* <a asp-controller="Order" asp-action="RemoveOrder" asp-route-id="@order.Id" class="remove-icon"><i class="fas fa-trash-alt"></i></a> </td>*@
            </tr>
        }
    </tbody>
</table>
<style>
    .remove-icon {
        color: red;
        margin-left: 10px;
    }
</style>